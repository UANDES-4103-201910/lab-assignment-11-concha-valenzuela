<!DOCTYPE html>
<html>
  <head>
    <title>Solution</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>
    <div class ="container">
      <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light ">
          <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2" >
            <a class="navbar-brand" href = 'http://localhost:3000'> TicketTopia
            </a>

            <% if user_signed_in? %>
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <a class="nav-link" href="http://localhost:3000/events">Events</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="http://localhost:3000/ticket_types">Ticket Types</a>
                </li>
            <% end %>




            </ul>
          </div>

          <div class="navbar-collapse collapse w-100 order-3 dual-collapse2" >
            <div class="navbar-nav ml-auto">


              <li class="nav-item"><span class ="nav-link"> <%= render 'devise/menu/registration_items' %></span></li>
              <li class="nav-item"><span class ="nav-link"> <%= render 'shopping_carts/shopping_cart' %></span></li>
              <li class="nav-item"><span class ="nav-link"> <%= render 'devise/menu/login_items' %></span></li>
              <li class="nav-item"><span class ="nav-link"> <%= render 'devise/menu/logout_items' %></span></li>

            </div>
          </div>
        </nav>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </header>

      
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col col-lg-2">
          </div>
          <div class="col-md-auto">
            <%= yield %>
          </div>
          <div class="col col-lg-2">
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
