
<%= form_with scope: :ticket_type, url: ticket_types_path, local: true do |form| %>

  <% if @ticket_type.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ticket_type.errors.count, "error") %> prohibited
        this ticket type from being saved:
      </h2>
      <ul>
        <% @ticket_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <br><strong><%= form.label :ticket_zone_id %><br></strong>
  <%= form.select(:ticket_zone_id, options_from_collection_for_select(TicketZone.all, :id, :zone))%><br><br>

  <strong><%= form.label :event_id %><br></strong>
  <%= form.collection_select(:event_id, Event.all, :id, :name)%><br><br>

  <%= form.label :price %>
  <%= form.text_field :price %>

  <p>
    <br><%= form.submit %>
  <p>
<% end %>